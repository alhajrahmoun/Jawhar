<section class="signUp">
    <div class="container">
     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'col s12', method: :put}) do |f| %>
        <div class="row">
          <div style="float: right;">
            <%= f.error_notification %>
            <br>
          </div>
        </div>
      <div class="row">
        <div class="input-field col l6 s12">
        <%= f.input :first_name, label: "الاسم", class: 'validate' %>
        </div>
        <div class="input-field col l6 s12">
        <%= f.input :last_name, label: "الكنية", class: 'validate' %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col l6 s12">
        <%= f.input :password, required: false, label: "كلمة المرور الجديدة", hint: ("#{@minimum_password_length} محارف على الأقل" if @minimum_password_length), class: 'validate' %>
        </div>
        <div class="input-field col l6 s12">
        <%= f.input :password_confirmation, required: false, label: "تأكيد كلمة المرور الجديدة", class: 'validate' %>
          <p class="val"></p>
        </div>
         <div class="input-field col l6 s12">
        <%= f.input :current_password, label: "كلمة المرور القديمة", required: true, class: 'validate' %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :email, label: "البريد الالكتروني", class: 'validate' %>
        </div>
      </div>

      <div class="row">
        <div class="file-field input-field">
          <div class="btn" style="float: right; margin-left: 10px">
              <span>الصورة الشخصية</span>
              <%= f.file_field :avatar%>
              <%= f.hidden_field :avatar_cache %>
          </div>
          <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
          </div>
        </div>
      </div>

      
      <div class="signUp-submit">
         <div class="col s12">
         <%= f.button :submit, "تعديل", class: 'btn waves-effect waves-light' %>
         </div>
           <% end %>
      </div>
    </div>
</section>
