<% unless @gists.empty? %>
	<%= render 'gists/gists', gists: @gists, gist: @gists.first, active: @gists.first.id %>

	<script type="text/javascript">
	  $('.snippets').each(function() {
	    var editor = CodeMirror.fromTextArea(this, {
	        lineNumbers: true,
	        matchBrackets: true,
	        readOnly: true
	    });
	});
	  $('.last-gists').scrollTo('#active');
	</script>

<% else %>
	<div class="container">
	<div class="row">
		<div class="col-md-6.col-md-offset-3">
			<div class="container">
				<div class="row">
