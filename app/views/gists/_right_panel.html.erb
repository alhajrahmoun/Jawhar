<div class="last-gist">
  <h5 class="last-gist-title <%= "active-gist" if gist.id == active %>">
      <%= link_to gist.title, short_url(slug: gist.slug), remote: true %>
  </h5>
  <div class="comment-files-count">
    <i class="zmdi zmdi-comments"><%= gist.comments.size %></i>
    <i class="zmdi zmdi-file"><%= gist.snippets.size  %></i>
  </div>
  <div class="tags">
    <%= render gist.tags %>
  </div>
</div>

<script type="text/javascript">
  $(".last-gist-title").on("click", function() {
    $('.last-gist-title').removeClass('active-gist');
    $(this).addClass('active-gist');
  })
</script>
                      