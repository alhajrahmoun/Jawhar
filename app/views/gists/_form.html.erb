<%= form_for @gist, validate: true do |f|%>
<div class="container">
	<div class="input-field col s6">
    	<%= f.text_field :title, placeholder: 'عنوان الجوهر', class: 'validate' %>
        <label for="gist_title" class="message active" style="font-size: 14px; color: red;"></label>
    </div>

    <div class="input-field col s6">
    	<%= f.text_area :description, placeholder: 'وصف الجوهر', class: 'materialize-textarea' %>
    </div>
	
	<div id="snippets">
		<%= f.fields_for :snippets do |snippet| %>
			<%= render "snippet_fields", f: snippet %>
		<% end %>
	</div>

	<div class="row">
		<div class="col l8 pull-l2 s10 pull-s1">
			<%= link_to_add_association 'ضِف ملفاً جديداً', f, :snippets, class: 'add_fields btn wave-effect' %>
		</div>
	</div>
	<div class="row">
		<div class="col l8 pull-l2 s12">
			<label class="message" style="font-size: 16px; color: black;">ضع وسوماً للجوهر</label>
	        <%= f.select :tag_list, @gist.tags, {}, multiple: true, class: 'tags', data: { controller: 'select2' } %>
	    </div>
    </div>
	

	<div class="row">
		<div class="col l8 pull-l2 s10 pull-s1">
	<%= f.submit "حفظ", class: 'update-gist btn wave-effect' %>
		</div>
	</div>
</div>
<% end %>