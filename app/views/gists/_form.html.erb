<div class="container">
<%= form_for @gist do |f|%>
	<h4>إضافة جوهر جديد</h4>
	<div class="input-field col s6">
        <%= f.text_field :title, placeholder: 'عنوان الجوهر', class: 'validate' %>
    </div>

    <div class="input-field col s6">
        <%= f.text_area :description, placeholder: 'وصف الجوهر', class: 'materialize-textarea' %>
    </div>
	
	<div id="snippets">
	<%= f.fields_for :snippets do |snippet| %>
		<%= render "snippet_fields", f: snippet %>
	<% end %>
	</div>

	<div class="links">
		<%= link_to_add_association 'ضِف ملفاً جديداً', f, :snippets, class: 'add_fields btn wave-effect' %>
	</div>
	<br>
	<div class="input-field col s6">
        <%= f.select :tag_list, {}, {prompt: 'ضِف وسوماً للجوهر (افصل بين الوسوم المضافة بفاصلة مثل [ جوهر, تجربة ] )'},{class: 'tags'} %>
    </div>
	
	<br>
	<%= f.submit "حفظ", class: 'update-gist btn wave-effect' %>
<% end %>
</div>

