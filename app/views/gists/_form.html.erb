<%= javascript_include_tag 'jquery.tagsinput.min.js' %>
<%= stylesheet_link_tag 'jquery.tagsinput.min.css' %>
<div class="container">
<%= form_for @gist do |f|%>
	<h4>إضافة جوهر جديد</h4>
	<div class="input-field col s6">
        <%= f.text_field :title, placeholder: 'عنوان الجوهر', class: 'validate' %>
    </div>

    <div class="input-field col s6">
        <%= f.text_area :description, placeholder: 'وصف الجوهر', class: 'materialize-textarea' %>
    </div>
	
	<div id="snippets">
	<%= f.fields_for :snippets do |snippet| %>
		<%= render "snippet_fields", f: snippet %>
	<% end %>
	</div>

	<div class="links">
		<%= link_to_add_association 'ضِف ملفاً جديداً', f, :snippets, class: 'add_fields btn wave-effect' %>
	</div>
	<br>
	<div class="input-field col s6">
        <%= f.text_field :tag_list, id: 'tags', value: f.object.tag_list.to_s, placeholder: 'ضِف وسوماً للجوهر', class: 'validate' %>
    </div>
	
	<br>
	<%= f.submit "حفظ", class: 'update-gist btn wave-effect' %>
<% end %>
</div>

<script type="text/javascript">
	$('#tags').tagsInput({
		'height':'90px',
	   	'width':'100%',
	   	'interactive':true,
	   	'defaultText':'ضِف وسماً '
	});
</script>