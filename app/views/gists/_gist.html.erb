<div class="row">
    <section class="gists col l12 s12" id="gists">
        <div class="container" style="width: 95%">
            <div class="row">
                <div class="col l3 m4 s11">
                   <div class="last-gists">
                       <div class="last-gist">
                           <h5 class="last-gist-title">
                               <%= link_to gist.title, gist_path(gist) %>
                           </h5>
                           <div class="comment-files-count">
                               <i class="zmdi zmdi-comments">0</i>
                               <i class="zmdi zmdi-file"><%= gist.snippets.count %></i>
                           </div>
                           <div class="tags">
                               <div class="tag">
                                   <a href="#">label1</a>
                               </div>
                               <div class="tag">
                                   <a href="#">label2</a>
                               </div>
                           </div>
                       </div>
                   </div>
                </div> 
                <div class="col l8 m8 s12">
                    <div class="gist">
                        <div class="gist-head">
                           <div class="heading">
                                 <h5><%= gist.title %></h5>
                                <span class="edit-times"><a href="#">0</a></span>
                           </div>
                            <div class="gist-tools">
                              <%= link_to edit_gist_path(gist), class: 'edit' do %>
                                <i class="zmdi zmdi-edit"></i>
                              <% end %>
                                
                                <a class="link" href="#"><i class="zmdi zmdi-link"></i></a>
                                <a class="share" href="#"><i class="zmdi zmdi-share"></i></a>
                            </div>
                            <div class="coder-link">
                                صاحب الجوهر :
                                <a href="#"><%= owner(gist)%></a>
                             </div>
                             <div class="coder-link" style="border-left: none">
                                منذ <%= time_ago_in_words(gist.created_at) %>
                             </div>
                        </div>
                        <div class="files">
                          <% gist.snippets.each do |snippet| %>
                            <div class="file" style="direction: ltr">
                              <%= text_field_tag 'file', snippet.name, readonly: true %>
                              <%= text_area_tag 'snippet', snippet.code, class: 'snippets'%>  
                            </div> 
                          <% end %>

                        </div>
                        <div class="comments">
                        <% gist.comments.each do |comment| %>
                          <div class="comment">
                                <div class="user-img">
                                    <%= image_tag comment.user.avatar, width: 100, height: 100%>
                                    <div class="comment-contain">
                                        <div class="comment-head">
                                            <h4>علق <span><%= owner(comment) %></span> منذ <%= time_ago_in_words(comment.created_at) %></h4>
                                        </div>
                                        <div class="comment-content">
                                            <p>
                                                <%= comment.content %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </section>
</div>